<%- include('../partials/admin-header') -%>

    <div class="page-heading">
        <h1>All</h1>
        <span class="title"><span class="highlight">e</span>Journal<span class="highlight">Mo</span>Ko</span>
        <h1>Posts</h1>
    </div>

    <div class="general-posts-container pt-3">
        <% posts.forEach(e => { %>
            <div class="posts-container">
                <p class="post-category"><%= e.category %></p>

                <% e.posts.forEach(f => { %>
                    <div class="row g-0 rounded-3 mb-4 shadow-sm">
                        <div class="col-md-11 px-3 pt-3 pb-1">
                            <p class="post-message">
                                <%= f.message %>
                            </p>
                            
                            <div class="text-end">
                                <span class="post-date"><%= f.date %></span>
                            </div>
                        </div>
        
                        <div class="col-md-1 text-end text-md-center my-auto p-0">
                            <a href="#" class="btn btn-outline-secondary rounded-0" aria-current="page">
                                <i class="bi bi-pencil-square"></i>
                            </a>
        
                            <a href=<%= "/admin/archive/" + f._id %> class="btn btn-outline-dark rounded-0 ">
                                <i class="bi bi-archive"></i>
                            </a>
                        </div>
                    </div>
                <% }); %>

            </div>
        <% }); %>
    </div>

<%- include('../partials/admin-footer') -%>
